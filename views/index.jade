extends layout

block content
    h1 Convert!
    p by Gausmann Media
    .row
        div#Main.col-md-12
            div#process.progress
                .progress-bar(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='width: 0%;')
                    | 0%
            form#from_startjob.form-horizontal.hide(role='form', method='post', action='/createjob')
              .form-group
                label.col-sm-2.control-label(for='from_startjob_dropboxurl') Dropbox Url
                .col-sm-10
                  input#from_startjob_dropboxurl.form-control(type='url', name='dropboxurl', placeholder='dropboxurl', value='https://dl.dropboxusercontent.com/s/zhhvzf6iqw3fhig/tsch%C3%A4insch%20gonn%20komm.mp3')
              .form-group
                label.col-sm-2.control-label(for='from_startjob_jobid') JobId
                .col-sm-10
                  input#from_startjob_jobid.form-control(type='text', name='jobid', placeholder='#######')
              .form-group
                .col-sm-offset-2.col-sm-10
                  a#button_startjob.btn.btn-default(href='#', type='submit') Convert!
            
            
